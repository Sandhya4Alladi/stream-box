<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StreamBox</title>
    <link rel="icon" type="image/png" href="../images/play.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
      <div class="video-player" style="padding-left: 20%; padding-top: 8%; width: 80%;">
        <video id="videoPlayer" width="100%"  controls controlsList="nodownload" muted loop >
            <source id="videoSource" src='https://d2fpvsof67xqc9.cloudfront.net/660ce2f8b0a3fb0e5b2572dd-df3d9664-f0c8-484c-81d1-3bbefaafcf3a-high_quality_360p.mp4' type="video/mp4">
            <track src="/videos/stream?data=<%= encodeURIComponent(JSON.stringify({ bucketName: process.env.VTT_BUCKET, Key : '660ce2f8b0a3fb0e5b2572dd-df3d9664-f0c8-484c-81d1-3bbefaafcf3a-high_quality.mp4.vtt' })) %>" label="English captions" kind="captions" srclang="en"  default>
        </video>
        <select id="qualitySelector" onchange="changeQuality()">
            <option value="360p">360p</option>
            <option value="720p">720p</option>
            <option value="1080p">1080p</option>
        </select>
      </div>
      <script>
        function changeQuality() {
            var selector = document.getElementById("qualitySelector");
            var video = document.getElementById("videoPlayer");
            var selectedQuality = selector.value;
            var videoUrl = 'https://d2fpvsof67xqc9.cloudfront.net/660ce2f8b0a3fb0e5b2572dd-df3d9664-f0c8-484c-81d1-3bbefaafcf3a-high_quality_' + selectedQuality + '.mp4';
            video.src = videoUrl;
            video.load();
            video.play();
        }
    </script>
</body>
</html>